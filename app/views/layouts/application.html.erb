<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Insert meta tags directly from application_controller -->
    <meta name="keywords" content="<%= @seo_keywords %>"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Make the nav bar available for all pages -->
    <!-- To use partials we must use render -->
    <%= render "shared/nav" %>

    <!--Check if the current_user is a Devise user class-->
    <% if current_user.is_a?(User) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Login", new_user_session_path %>
      <%= link_to "Register", new_user_registration_path %>
    <% end %>

    <!-- Yield is where the page we go to loads into -->
    <%= yield %>

    <!-- this allows us to track the session source that came initially in the entire website -->
    <% if session[:source] %>
    <p>Thanks for visiting me from <%= session[:source] %></p>
    <% end %>
  </body>
</html>
