<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Insert meta tags directly from application_controller -->
    <meta name="keywords" content="<%= @seo_keywords %>"/>

    <!-- The stylesheet is directly correlated to /app/assets name of the .scss file -->
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    

    <!--Check if the current_user is a Devise user class-->
    <%= login_helper %>

    <!-- Yield is where the page we go to loads into -->
    <%= yield %>

    <!-- To use partials we must use render -->
    <!-- To use a different type of css, since it is shared, we had to declare
      a local variable on _nav.html.erb file -->
    <%= render "shared/nav", location: 'bottom' %>

    <!-- this allows us to track the session source that came initially in the entire website -->
    <%= source_helper("blog") %>
  </body>
</html>
